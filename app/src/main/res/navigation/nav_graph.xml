<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivityFragment">

    <fragment
        android:id="@+id/mainActivityFragment"
        android:name="com.example.prekshasingla.cashlessbazar.MainActivityFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainActivityFragment_to_loginSignupActivity2"
            app:destination="@id/loginSignupActivity" />
        <action
            android:id="@+id/action_mainActivityFragment_to_productDetailFragment"
            app:destination="@id/productDetailFragment" />
    </fragment>
    <activity
        android:id="@+id/loginSignupActivity"
        android:name="com.example.prekshasingla.cashlessbazar.LoginSignupActivity"
        android:label="activity_login_signup"
        tools:layout="@layout/activity_login_signup" />
    <fragment
        android:id="@+id/productDetailFragment"
        android:name="com.example.prekshasingla.cashlessbazar.ProductDetailFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" />
</navigation>